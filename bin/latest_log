#!/bin/bash

log_dir="com.luke-abel.local-weather.sdPlugin/logs"

# Define the array of log file names
log_files=(
  "$log_dir/com.luke-abel.local-weather.0.log"
  "$log_dir/com.luke-abel.local-weather.1.log"
  "$log_dir/com.luke-abel.local-weather.2.log"
  "$log_dir/com.luke-abel.local-weather.3.log"
  "$log_dir/com.luke-abel.local-weather.4.log"
  "$log_dir/com.luke-abel.local-weather.5.log"
  "$log_dir/com.luke-abel.local-weather.6.log"
  "$log_dir/com.luke-abel.local-weather.7.log"
  "$log_dir/com.luke-abel.local-weather.8.log"
  "$log_dir/com.luke-abel.local-weather.9.log"
)

# Initialize variables to store the latest log file name and timestamp
latest_log_file=""
latest_timestamp=""

# Iterate through the array of log file names
for log_file in "${log_files[@]}"; do
  if [[ -f "$log_file" ]]; then
    timestamp=$(tail -n 1 "$log_file" | awk '{print $1}')
    if [[ "$timestamp" > "$latest_timestamp" ]]; then
      latest_log_file="$log_file"
      latest_timestamp="$timestamp"
    fi
  fi
done

if [[ -n "$latest_log_file" ]]; then
  echo "-----"
  echo "READING LOG:"
  echo "$latest_log_file"
  echo "-----"
  cat "$latest_log_file"
else
  echo "No log file found."
fi
